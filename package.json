{
    "name": "zenpay-payment-plugin",
    "version": "1.0.0",
    "description": "ZenPay Payment Plugin Demo with modular JavaScript",
    "main": "build/js/bundle.js",
    "author": "Ian Menethil",
    "license": "MIT",
    "homepage": "https://zenithpayments.support",
    "repository": {
        "type": "git",
        "url": "https://github.com/ZenithPayments/zenpay-payment-plugin"
    },
    "keywords": [
        "zenpay",
        "payment",
        "plugin",
        "javascript",
        "gulp"
    ],
    "scripts": {
        "build:js": "webpack --config webpack.js.config.js --watch",
        "build:js:fp": "webpack --config webpack.js.fp.config.js",
        "build:css": "webpack --config webpack.css.config.js",
        "build:html": "gulp --gulpfile gulpfile.js",
        "build:html:fp": "gulp --gulpfile gulpfile.fp.js",
        "lint": "eslint . --fix",
        "clean": "rimraf ./build",
        "pretty": "npx prettier --write .",
        "build": "npm run clean && npm run build:css && npm run build:js && npm run build:html && npm run lint && npm run pretty",
        "build:fp": "npm run build:js:fp && npm run build:html:fp && npm run lint && npm run pretty",
        "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
        "analyze": "webpack --config webpack.js.config.js --json > stats.json && npx webpack-bundle-analyzer stats.json"
    },
    "devDependencies": {
        "@babel/core": "^7.23.2",
        "@babel/preset-env": "^7.23.2",
        "babel-loader": "^10.0.0",
        "browser-sync": "^3.0.4",
        "css-loader": "^7.1.2",
        "css-minimizer-webpack-plugin": "^7.0.2",
        "eslint-webpack-plugin": "^5.0.1",
        "file-include-webpack-plugin": "^1.3.9",
        "globals": "^16.0.0",
        "gulp": "^5.0.0",
        "gulp-file-include": "^2.3.0",
        "gulp-plumber": "^1.2.1",
        "gulp-rename": "^2.0.0",
        "html-loader": "^5.1.0",
        "html-webpack-plugin": "^5.6.3",
        "jest-environment-jsdom": "^29.7.0",
        "mini-css-extract-plugin": "^2.9.2",
        "rimraf": "^6.0.1",
        "terser-webpack-plugin": "^5.3.14",
        "webpack": "^5.99.7",
        "webpack-bundle-analyzer": "^4.10.2",
        "webpack-cli": "^6.0.1",
        "webpack-dev-server": "^5.2.1",
        "webpack-merge": "^5.10.0"
    },
    "dependencies": {
        "@eslint/css": "^0.7.0",
        "@eslint/js": "^9.26.0",
        "@eslint/json": "^0.12.0",
        "@eslint/markdown": "^6.4.0",
        "autoprefixer": "^10.4.21",
        "eslint": "^9.26.0",
        "postcss-loader": "^8.1.1",
        "sass": "^1.87.0",
        "sass-loader": "^16.0.5",
        "typescript-eslint": "^8.31.1"
    }
}
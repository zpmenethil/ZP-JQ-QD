{
    "name": "zenpay-payment-plugin",
    "version": "1.0.0",
    "description": "ZenPay Payment Plugin Demo with modular JavaScript",
    "main": "build/js/bundle.js",
    "author": "Ian Menethil",
    "license": "MIT",
    "homepage": "https://zenithpayments.support",
    "repository": {
        "type": "git",
        "url": "https://github.com/ZenithPayments/zenpay-payment-plugin"
    },
    "keywords": [
        "zenpay",
        "payment",
        "plugin",
        "javascript",
        "gulp"
    ],
    "scripts": {
        "build:js": "webpack --config webpack.js.config.js",
        "build:css:dev": "webpack --config webpack.css.config.js --mode development",
        "build:css:prod": "webpack --config webpack.css.config.js --mode production",
        "build:css": "npm run build:css:dev && npm run build:css:prod",
        "build:html": "gulp --config gulpfile.js",
        "lint": "eslint . --fix",
        "clean": "rimraf ./build",
        "pretty": "prettier --write .",
        "build": "npm run clean && npm run build:css && npm run build:js && npm run build:html",
        "watch": "webpack --watch --mode development",
        "serve": "webpack serve --mode development --open"
    },
    "devDependencies": {
        "@babel/core": "^7.23.2",
        "@babel/preset-env": "^7.23.2",
        "babel-loader": "^10.0.0",
        "css-loader": "^7.1.2",
        "css-minimizer-webpack-plugin": "^7.0.2",
        "eslint-webpack-plugin": "^5.0.1",
        "file-include-webpack-plugin": "^1.3.9",
        "html-loader": "^5.1.0",
        "html-webpack-plugin": "^5.6.3",
        "mini-css-extract-plugin": "^2.9.2",
        "rimraf": "^6.0.1",
        "terser-webpack-plugin": "^5.3.14",
        "webpack": "^5.99.7",
        "webpack-cli": "^6.0.1",
        "webpack-dev-server": "^5.2.1",
        "webpack-merge": "^5.10.0"
    },
    "dependencies": {
        "autoprefixer": "^10.4.21",
        "gulp": "^5.0.0",
        "gulp-file-include": "^2.3.0",
        "gulp-plumber": "^1.2.1",
        "postcss-loader": "^8.1.1",
        "sass": "^1.87.0",
        "sass-loader": "^16.0.5"
    }
}
